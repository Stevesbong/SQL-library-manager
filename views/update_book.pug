extends layout.pug

block content
    h1 Update Book
    form(action="/books/" + oneBook.id + "/edit", method="post")
        include form_error
        p
            label(for="title") Title
            input(name="title" type="text" id="title" value=oneBook.title)
        p
            label(for="author") Author
            input(name="author" type="text" id="author" value=oneBook.author)
        p
            label(for="genre") Genre
            input(name="genre" type="text" id="genre" value=oneBook.genre)
        p
            label(for="year") Year
            input(name="year" type="text" id="year" value=oneBook.year)
        p
            input(type="submit" value="Update Book")
    form(action="/books/" + oneBook.id + "/delete", onsubmit="return confirm('Do you really want to delete this books?');", method="post")
        p
            a(class="button" href="/books") Cancel
        p
            input(type="submit" value="Delete Book")